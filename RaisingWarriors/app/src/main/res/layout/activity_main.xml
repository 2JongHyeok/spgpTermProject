<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_image"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context=".app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="100dp"
        >

        <Button
            android:id="@+id/prevStageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:text="&lt;"
            android:onClick="onBtnPreviousStage"
            />
        <ImageView
            android:id="@+id/stageTextView"
            android:layout_width="30dp"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:background="@mipmap/map_1"
            android:gravity="center"
            />

        <Button
            android:id="@+id/nextStageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:onClick="onBtnNextStage"
            android:padding="0dp"
            android:text="&gt;" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:text="Start the Game"
        android:onClick="onBtnStartGame"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:text="&lt;"
            android:onClick="onBtnPrevious"
            />
        <Button
            android:id="@+id/stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:text="&lt;"
            android:onClick="onBtnPrevious"
            />
        <Button
            android:id="@+id/equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:text="&gt;"
            android:onClick="onBtnNext"
            />
    </LinearLayout>
</LinearLayout>