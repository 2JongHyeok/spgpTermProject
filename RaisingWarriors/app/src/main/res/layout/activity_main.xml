<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_image"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context=".app.MainActivity"
    >
    <TextView
        android:id="@+id/stageTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Stage 1"
        android:textSize="50dp"
        android:lines="1"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <Button
            android:id="@+id/prevStageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:text="&lt;"
            android:onClick="onBtnPreviousStage"
            />
        <ImageView
            android:id="@+id/stageImageView"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="450dp"
            android:gravity="top"
            />

        <Button
            android:id="@+id/nextStageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:onClick="onBtnNextStage"
            android:padding="0dp"
            android:text="&gt;" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:text="Start the Game"
        android:onClick="onBtnStartGame"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:background="@mipmap/shop_logo"
            android:layout_weight="1"
            android:onClick="onBtnShop"
            />
        <ImageButton
            android:id="@+id/stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:layout_weight="1"
            android:background="@mipmap/main_logo"
            android:text="&lt;"
            android:onClick="onBtnPrevious"
            />
        <ImageButton
            android:id="@+id/hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:minWidth="30dp"
            android:minHeight="40dp"
            android:layout_weight="1"
            android:background="@mipmap/hero_logo"
            android:text="&lt;"
            android:onClick="onBtnPrevious"
            />
    </LinearLayout>
</LinearLayout>